
@{ ViewBag.Title = "My profile";
                EbuyNetwork.Models.User user = (EbuyNetwork.Models.User)Session["loggedUser"]; }
<div style="width:100%;height:50px;"> hh </div>

<ol class="breadcrumb">
    <li><a href="@Url.Action("Index","Home")">Home</a></li>
    <li class="active">My profile</li>
</ol>


<div class="container">

    <form action="" method="post" onsubmit="return ValidateForm();">
        <div class="col-lg-6">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-label">First name</div>
                    <input type="text" class="fullwidth form-control" id="jfirstname" name="firstname" value="@user.firstName" />
                </div>
                <div class="col-lg-6">
                    <div class="form-label">Last name</div>
                    <input type="text" class="fullwidth form-control" id="jlastname" name="lastname" value="@user.lastName" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-label">Email address</div>
                    <div class="form-control">@user.email</div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-label">Login password</div>
                    <input type="password" class="fullwidth form-control" id="jpassword" name="password" value="@user.password" />
                </div>
                <div class="col-lg-6">
                    <div class="form-label">Confirm login password</div>
                    <input type="password" class="fullwidth form-control" id="jpassword2" name="password2" value="@user.password" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-label">Shipping address</div>
                    <textarea class="fullwidth form-control" id="jaddress" name="address" style="height:100px;">@user.address</textarea>
                </div>
                <div class="col-lg-12">
                    <div class="form-label">CIN</div>
                    <textarea class="fullwidth form-control" id="jCIN" name="CIN" style="height:100px;">@user.CIN</textarea>
                </div>
            </div>


        </div>

    </form>

</div>

<script src="~/Scripts/MyProfile/MyProfileScript.js"></script>

